{
  "name": "HE Benchmark Development",
  "image": "mcr.microsoft.com/devcontainers/cpp:ubuntu-22.04",
  
  "features": {
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "latest"
    }
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "tamasfe.even-better-toml",
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "eamodio.gitlens"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "rust-analyzer.checkOnSave.command": "clippy",
        "cmake.configureOnOpen": false,
        "[rust]": {
          "editor.defaultFormatter": "rust-lang.rust-analyzer",
          "editor.formatOnSave": true
        }
      }
    }
  },
  
  // Install dependencies and build libraries on container creation
  "postCreateCommand": "bash .devcontainer/setup.sh",
  
  // Mount points for better performance
  "mounts": [
    "source=${localWorkspaceFolder}/target,target=/workspaces/he-benchmark-spike/target,type=bind,consistency=cached"
  ],
  
  // Forward ports for future Spring Boot integration
  "forwardPorts": [8080, 8081],
  
  // Environment variables
  "containerEnv": {
    "LD_LIBRARY_PATH": "/usr/local/lib:${LD_LIBRARY_PATH}",
    "PKG_CONFIG_PATH": "/usr/local/lib/pkgconfig:${PKG_CONFIG_PATH}",
    "RUST_BACKTRACE": "1"
  },
  
  "remoteUser": "vscode",
  
  // Use host's Git config
  "postAttachCommand": "git config --global --add safe.directory /workspaces/he-benchmark-spike"
}